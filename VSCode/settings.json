{
    "workbench.iconTheme": "material-icon-theme",
    "vim.vimrc.enable": true,
    "editor.fontSize": 12,
    "editor.fontFamily": "'mononoki Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.inlayHints.fontFamily": "'mononoki Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "debug.console.fontSize": 12,
    "editor.codeLensFontFamily": "'mononoki Nerd Font'",
    "scm.inputFontFamily": "editor",
    "python.linting.pylintEnabled": false,
    "vim.foldfix": true,
    "julia.NumThreads": 4,
    "julia.persistentSession.shell": "/bin/zsh",
    "files.exclude": {
        "**/.vscode": true
    },
    "workbench.colorTheme": "Monokai Dimmed",
    "editor.rulers": [
        { "column": 80, "color": "#3a3a3a" },
        { "column": 100, "color": "#767676" }
    ],
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "git.allowForcePush": true,
    "markdown.preview.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    "python.condaPath": "$HOME/miniconda3/bin/conda",
    "python.linting.enabled": true,
    "python.linting.flake8Path": "/usr/bin/flake8",
    "python.linting.flake8Enabled": true
}
